	<div class="delete-popup">
		<div class="delete-popup__title">
			{{ title }}
		</div>
		<div class="delete-popup__buttons">
			<a href="#" class="delete-popup__button delete-popup__button-yes"><div>Да</div></a>
			<a href="#" class="delete-popup__button delete-popup__button-cancel"><div>Отмена</div></a>		
		</div>
