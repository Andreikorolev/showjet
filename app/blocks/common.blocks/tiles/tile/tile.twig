<div class="tile {{tileSize}} {{sliderClass}} {{infoClass}}" {{dataProgress}} data-videourl="{{url}}">
	<div class="tile__progress">
		<div class="tile__progress-bar"></div>
	</div>
	<div class="tile__inner">
		<div class="tile__bg">
			<img src="img/tile-bg.png" alt="" class="tile__bg-img">
		</div>
		<video id="{{videoID}}" class="tile__video video-js" fluid="true" preload="none" muted="mute" width="100%" height="100%" data-setup='{"poster":"img/tile-bg.png"}' >
			<source src="https://d2zihajmogu5jn.cloudfront.net/bipbop-advanced/bipbop_16x9_variant.m3u8" type="application/x-mpegURL" />
		</video>
		<div class="tile__info-wrap">
			<div class="tile__buttons-wrap">
				<div class="tile__button tile__button_play" title="Смотреть сериал">
					<img src="img/play-icon.svg" alt="" class="tile__button-icon">
				</div>
				<div class="tile__button tile__button_info" title="Информация о сериале">
					<img src="img/info-icon.svg" alt="" class="tile__button-icon">
				</div>
				<div class="tile__button tile__button_like" title="Добавить в мое">
					<img src="img/heart-icon.svg" alt="" class="tile__button-icon">
				</div>
			</div>
			<div class="tile__bottom-wrap">
				<div class="tile__meta-info-wrap">
					<div class="tile__title">
						Новый папа Новый папа Новый папа 
					</div>
					<div class="tile__meta-info">
						<div class="tile__meta-info-item tile__meta-info-item_18">
							18+
						</div>
						<div class="tile__meta-info-item">
							<img src="img/kinopoisk-icon.svg" alt="" class="tile__meta-info-item-icon">
							8,8
						</div>
						<div class="tile__meta-info-item">
							<img src="img/imdb-icon.svg" alt="" class="tile__meta-info-item-icon">
							8,5
						</div>
					</div>
					<div class="tile__text">
						<div class="tile__text-item">lavish</div>
						<div class="tile__text-item">Exiting</div>
						<div class="tile__text-item">Fantasy tv</div>
					</div>
				</div>
				<div class="tile__sound-button">
					<img class="tile__sound-button-img tile__sound-button-img_on" src="img/sound-on-icon.svg" alt="" title="Выключить звук">
					<img class="tile__sound-button-img tile__sound-button-img_off" src="img/sound-off-icon.svg" alt="" title="Включить звук">
				</div>
			</div>
		</div>
	</div>
</div>