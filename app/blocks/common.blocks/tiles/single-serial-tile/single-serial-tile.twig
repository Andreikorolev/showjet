<div class="single-serial-tile">
	<div class="single-serial-tile__bg" style="background-image: url(img/about-serial-1.jpg);"></div>
	<div class="single-serial-tile__wrap">
		<div class="single-serial-tile__trailer">
			<div class="single-serial-tile__trailer-poster">
				<img src="img/tile-bg.jpg" alt="">
			</div>
			<video id="singleSerialTileVideo" class="video-js" fluid="true" loop preload="auto" muted="mute" width="100%" height="100%" data-setup='{"poster":"img/tile-bg.jpg"}' >
				<source src="https://d2zihajmogu5jn.cloudfront.net/bipbop-advanced/bipbop_16x9_variant.m3u8" type="application/x-mpegURL" />
			</video>
			<div class="single-serial-tile__sound-button">
				<img class="single-serial-tile__sound-button-img single-serial-tile__sound-button-img_on" src="img/sound-on-icon.svg" alt="">
				<img class="single-serial-tile__sound-button-img single-serial-tile__sound-button-img_off" src="img/sound-off-icon.svg" alt="">
			</div>
		</div>
		<div>
			<div class="single-serial-tile__description">
				{% include 'blocks/common.blocks/tiles/single-serial-tile/description/description.twig'%}
			</div>
		</div>
	</div>
</div>