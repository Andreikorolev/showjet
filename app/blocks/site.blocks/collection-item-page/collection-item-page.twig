{% extends 'blocks/base.blocks/base/base.twig' %}

{% block content %}
<div class="container-fluid">
	<div class="row">

		{# HEADER #}
		{% include 'blocks/common.blocks/header/header.twig'%}
		
		<div class="collection-item-page__top-banner container" style="background-image: url(img/collection-item-banner.jpg);">
			<div class="collection-item-page__top-banner-info-wrap">
				<div class="collection-item-page__top-banner-title">
					Политические триллеры
				</div>
				<div class="collection-item-page__top-banner-subtitle">
					Сериалы о государственных тайнах
				</div>
			</div>
		</div>
		<div class="container">
			<div class="collection-item-page__four-tiles-wrap tiles-list__four-tiles">
				{% for item in 0..3 %}
				{% include 'blocks/common.blocks/tiles/tile/tile.twig' with {'tileSize':'tile__md', 'infoClass':'tile-info', 'url':'https://d2zihajmogu5jn.cloudfront.net/bipbop-advanced/bipbop_16x9_variant.m3u8', 'videoID':'collVideo1'~item }%}
				{% endfor %}
			</div>
			<div class="collection-item-page__four-tiles-wrap tiles-list__four-tiles">
				{% for item in 0..3 %}
				{% include 'blocks/common.blocks/tiles/tile/tile.twig' with {'tileSize':'tile__md', 'infoClass':'tile-info', 'url':'https://d2zihajmogu5jn.cloudfront.net/bipbop-advanced/bipbop_16x9_variant.m3u8', 'videoID':'collvideo2'~item }%}
				{% endfor %}
			</div>
		</div>
		<div class="collection-item-page__other-collections-wrap container">
			<div class="collection-item-page__other-collections-title">
				Другие коллекции
			</div>
			<div class="collection-page__tiles-wrap">
				{% for item in 0..3 %}
				{% include 'blocks/common.blocks/collection-tile/collection-tile.twig'%}
				{% endfor %}
			</div>
			<div class="collection-page__tiles-wrap">
				{% for item in 0..3 %}
				{% include 'blocks/common.blocks/collection-tile/collection-tile.twig'%}
				{% endfor %}
			</div>
			<div class="collection-page__tiles-wrap">
				{% for item in 0..3 %}
				{% include 'blocks/common.blocks/collection-tile/collection-tile.twig'%}
				{% endfor %}
			</div>
			<div class="collection-page__tiles-wrap">
				{% for item in 0..3 %}
				{% include 'blocks/common.blocks/collection-tile/collection-tile.twig'%}
				{% endfor %}
			</div>
		</div>
		{# FOOTER #}
		{% include 'blocks/common.blocks/footer/footer.twig'%}
	</div>
</div> 
{% endblock %}
