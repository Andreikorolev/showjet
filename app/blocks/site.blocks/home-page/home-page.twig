{% extends 'blocks/base.blocks/base/base.twig' %}

{% block content %}
<div class="container-fluid">
	<div class="row">

		{# HEADER #}
		{% include 'blocks/common.blocks/header/header.twig'%}

		<div class="home-page__banner">
			<!-- HOME-PAGE-BANNER -->
			{% include 'blocks/common.blocks/home-page-banner/home-page-banner.twig'%}
		</div>

		<div class="home-page__recommended-serials">
			<div class="tiles-list">
				<h3 class="tiles-list__title">
					Рекомендуемые сериалы
				</h3>
				<div class="tiles-list__slider home-page__recommended-serials-slider">
					<div class="swiper-wrapper tiles-list__sm-tiles">
						{% for item in 0..9 %}
						{% include 'blocks/common.blocks/tiles/tile/tile.twig' with {'tileSize':'tile__sm', 'sliderClass':'swiper-slide', 'infoClass':'tile-info', 'url':'https://d2zihajmogu5jn.cloudfront.net/bipbop-advanced/bipbop_16x9_variant.m3u8', 'videoID':'recVideo'~item }%}

						{% endfor %}
					</div>
					<div class="slider-button-prev"><img src="img/prev-arrow.svg"></div>
					<div class="slider-button-next"><img src="img/next-arrow.svg"></div>
				</div>
			</div>
		</div>
		
		<!-- SINGLE-SERIAL-TILE -->
		{% include 'blocks/common.blocks/tiles/single-serial-tile/single-serial-tile.twig'%}

		<div class="home-page__continue-watching">
			<!-- ПРОДОЛЖИТЬ ПРОСМОТР -->
			<div class="tiles-list">
				<h3 class="tiles-list__title">
					Продолжить просмотр
				</h3>
				<div class="tiles-list__slider home-page__continue-watching-slider">
					<div class="swiper-wrapper tiles-list__sm-tiles">
						{% for item in 0..8 %}
						{% include 'blocks/common.blocks/tiles/tile/tile.twig' with {'tileSize':'tile__sm', 'sliderClass':'swiper-slide', 'infoClass':'tile-info', 'dataProgress':'data-progress="20"', 'url':'https://d2zihajmogu5jn.cloudfront.net/bipbop-advanced/bipbop_16x9_variant.m3u8', 'videoID':'contVideo'~item }%}

						{% endfor %}
					</div>
					<div class="slider-button-prev"><img src="img/prev-arrow.svg"></div>
					<div class="slider-button-next"><img src="img/next-arrow.svg"></div>
				</div>
			</div>
		</div>

		{% include 'blocks/common.blocks/about-serial/about-serial.twig'%}

		<div class="home-page__watching-now">	
			<div class="tiles-list">
				<h3 class="tiles-list__title">
					Сейчас смотрят
				</h3>
				<div class="tiles-list__slider home-page__watching-now-slider">
					<!-- Additional required wrapper -->
					<div class="swiper-wrapper tiles-list__sm-tiles">
						<!-- Slides -->
						{% for item in 0..8 %}
						{% include 'blocks/common.blocks/tiles/tile/tile.twig' with {'tileSize':'tile__sm', 'sliderClass':'swiper-slide', 'infoClass':'tile-info', 'url':'https://d2zihajmogu5jn.cloudfront.net/bipbop-advanced/bipbop_16x9_variant.m3u8', 'videoID':'watchVideo'~item }%}

						{% endfor %}
					</div>
					<div class="slider-button-prev"><img src="img/prev-arrow.svg"></div>
					<div class="slider-button-next"><img src="img/next-arrow.svg"></div>
				</div>
			</div>
		</div>

		{# FOOTER #}
		{% include 'blocks/common.blocks/footer/footer.twig'%}
	</div>
</div> 
{% endblock %}

